<h2 class="mb-4">新規ユーザー登録</h2>

<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
  <% if resource.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "ユーザー名", class: "form-label" %>
    <%= f.text_field :name, autofocus: true, required: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, "メールアドレス", class: "form-label" %>
    <%= f.email_field :email, required: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "パスワード（6文字以上）", class: "form-label" %>
    <%= f.password_field :password, autocomplete: "new-password", required: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label" %>
    <%= f.password_field :password_confirmation, required: true, class: "form-control" %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit "登録する", class: "btn btn-primary" %>
    <%= link_to "ログイン画面へ", new_session_path(resource_name), class: "btn btn-outline-secondary" %>
  </div>
<% end %>