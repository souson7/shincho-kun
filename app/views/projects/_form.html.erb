<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div class="alert alert-danger">
      <h2 class="h6 mb-2"><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul class="mb-0">
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, rows: 5, class: "form-control" %>
  </div>

  <div class="row g-3">
    <div class="col-sm-6">
      <%= form.label :start_date, class: "form-label" %>
      <%= form.date_field :start_date, class: "form-control" %>
    </div>
    <div class="col-sm-6">
      <%= form.label :end_date, class: "form-label" %>
      <%= form.date_field :end_date, class: "form-control" %>
    </div>
  </div>

  <div class="mt-4 d-flex gap-2">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Back", projects_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
