<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 m-0">Projects</h1>
  <%= link_to "New Project", new_project_path, class: "btn btn-primary" %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover align-middle">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Start</th>
        <th>End</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td class="text-truncate" style="max-width: 360px;"><%= project.description %></td>
          <td><%= project.start_date %></td>
          <td><%= project.end_date %></td>
          <td class="text-end">
            <%= link_to "Show", project, class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "Edit", edit_project_path(project), class: "btn btn-sm btn-outline-primary" %>
            <%= button_to "Delete", project, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
