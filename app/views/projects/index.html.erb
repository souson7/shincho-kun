<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 m-0">案件一覧</h1>
  <%= link_to "新規作成", new_project_path, class: "btn btn-primary" %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover align-middle">
    <thead>
      <tr>
        <th>案件名</th>
        <th>説明</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>締切日</th>
        <th>ステータス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td class="text-truncate" style="max-width: 200px;"><%= project.description %></td>
          <td><%= project.start_date %></td>
          <td><%= project.end_date %></td>
          <td><%= project.deadline %></td>
          <td>
            <% if project.status.present? %>
              <span class="badge bg-primary"><%= project.status %></span>
            <% else %>
              <span class="text-muted">-</span>
            <% end %>
          </td>
          <td class="text-end">
            <%= link_to "詳細", project, class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "編集", edit_project_path(project), class: "btn btn-sm btn-outline-primary" %>
            <%= button_to "削除", project, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
